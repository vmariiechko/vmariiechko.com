<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or site.title }}</title>

    {% include "partials/seo.njk" %}

    <script>
      window.THEME_CONFIG = {{ themes | dump | safe }};
    </script>

    <link rel="stylesheet" href="/css/style.css" />
    <link id="code-theme" rel="stylesheet" href="/assets/css/vendors/prism-darcula.css">

    <!-- Preload Fonts -->
    <link rel="preload" href="/assets/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/assets/fonts/jetbrains-mono-regular.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Favicon Guide: https://evilmartians.com/chronicles/how-to-favicon-in-2021-six-files-that-fit-most-needs -->
    <link rel="icon" href="{{ '/favicons/favicon.ico' | url }}" sizes="32x32">
    <link rel="icon" href="{{ '/favicons/icon.svg' | url }}" type="image/svg+xml">
    <link rel="apple-touch-icon" href="{{ '/favicons/apple-touch-icon.png' | url }}">
    <link rel="manifest" href="/manifest.webmanifest">

    <!-- Theme loader script to prevent FOUC -->
    <script>
      (function() {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          document.documentElement.setAttribute('data-theme', savedTheme);
        } else {
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
        }
      })();
    </script>

    <script src="/assets/js/main.js" defer></script>
    <script src="/assets/js/theme.js" defer></script>
  </head>
  <body class="antialiased">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="container mx-auto max-w-4xl p-4">
      {% include "partials/header.njk" %}

      <main id="main-content" class="mt-8">
        {{ content | safe }}
      </main>

      {% include "partials/footer.njk" %}
    </div>

    {% include "partials/search-modal.njk" %}

    <!-- Umami Analytics -->
    <script async defer
      src="https://cloud.umami.is/script.js"
      data-website-id="990d832e-e9c5-4855-a183-947a0344d6fd"
      data-domains="vmariiechko.com"
      data-do-not-track="true"
    ></script>
  </body>
</html>



