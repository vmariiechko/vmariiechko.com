---
layout: layouts/base.njk
---

<header>
  <h1>{{ title }}</h1>
  {% if description %}
    <p class="text-muted">{{ description }}</p>
  {% endif %}
</header>

<div class="mt-8">
  <ul class="space-y-4">
    {% set itemsByTopic = collections.itemsByTopic[topic] | reverse %}
    {% for item in itemsByTopic %}
      <li class="border-b border-border pb-4">
        <h2 class="text-2xl font-bold">
          <a href="{{ item.url }}" class="nav-link">{{ item.data.title }}</a>
        </h2>
        <div class="flex items-center justify-between flex-wrap gap-x-4 gap-y-2 mb-2">
          <p class="text-sm text-muted">
            {{ item.date | readableDate }}
          </p>
          <div class="flex items-center gap-2 flex-wrap">
            {%- for tag in item.data.tags | limit(3) -%}
              <span class="tag-chip-sm">{{ tag }}</span>
            {%- endfor -%}
          </div>
        </div>
        {% if item.data.description %}
          <p class="mt-2">{{ item.data.description }}</p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
