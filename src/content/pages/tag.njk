---
pagination:
  data: collections.allTags
  size: 1
  alias: tag
permalink: /tags/{{ tag.slug }}/
layout: layouts/base.njk
eleventyComputed:
  title: "{{ tag.name }}"
  description: "Posts and notes tagged with {{ tag.name }}"
---

{%- set taggedItems = collections.all | filterTagList(tag.name) -%}

<article class="prose lg:prose-xl mx-auto">
  <header>
    <h1>{{ tag.name }}</h1>
    <p class="text-muted">
      {{ taggedItems.length }} {% if taggedItems.length == 1 %}item{% else %}items{% endif %} tagged with <strong>{{ tag.name }}</strong>
    </p>
    <div class="not-prose mt-4">
      <a href="/tags/" class="text-sm text-link hover:underline">‚Üê All tags</a>
    </div>
  </header>

  <div class="mt-8">
    {%- if taggedItems.length > 0 -%}
    <ul class="not-prose space-y-6">
      {%- for item in taggedItems -%}
      <li class="pb-6 border-b border-border last:border-0">
        <h2 class="text-2xl font-bold mb-2">
          <a href="{{ item.url }}" class="nav-link">{{ item.data.title }}</a>
        </h2>
        <div class="flex items-center gap-3 text-sm text-muted mb-2">
          <span class="flex items-center gap-1.5">
            <span aria-hidden="true">{% phicon "calendar", "regular", size=16 %}</span>
            <time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
          </span>
          <span class="flex items-center gap-1.5">
            <span aria-hidden="true">{% phicon "clock", "regular", size=16 %}</span>
            <span>{{ item | readingTime }}</span>
          </span>
        </div>
        {%- if item.data.description -%}
        <p class="text-muted">{{ item.data.description }}</p>
        {%- endif -%}
      </li>
      {%- endfor -%}
    </ul>
    {%- else -%}
    <p class="text-muted">No items found with this tag.</p>
    {%- endif -%}
  </div>
</article>

